<h1>Editing order</h1>

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :OrderStatus %><br />
	<%= f.select :OrderStatus , @order.getStatuses%>
  </p>
  <p>
    <%= f.label :TotalPrice %><br />
    <%= f.text_field :TotalPrice %>
  </p>
  <p>
    <%= f.label :PurchaseNumber %><br />
    <%= f.text_field :PurchaseNumber %>
  </p>
  <p>
    <%= f.label :ShippingCosts %><br />
    <%= f.text_field :ShippingCosts %>
  </p>
  <p>
    <%= f.label :Customer %><br />
    <%= f.text_field :customer_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @order %> |
