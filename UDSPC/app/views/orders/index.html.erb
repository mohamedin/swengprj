<h1>Listing orders</h1>

<table>
  <tr>
    <th>Orderdate</th>
    <th>Confimationnumber</th>
    <th>Orderstatus</th>
    <th>Totalprice</th>
    <th>Paymentmethod</th>
    <th>Purchasenumber</th>
    <th>Shippingcosts</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.OrderDate %></td>
    <td><%=h order.ConfimationNumber %></td>
    <td><%=h order.OrderStatus %></td>
    <td><%=h order.TotalPrice %></td>
    <td><%=h order.PaymentMethod %></td>
    <td><%=h order.PurchaseNumber %></td>
    <td><%=h order.ShippingCosts %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

