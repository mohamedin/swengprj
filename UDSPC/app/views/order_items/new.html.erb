<h1>New order_item</h1>

<% form_for(@order_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :order_id %><br />
    <%= f.text_field :order_id %>
  </p>
  <p>
    <%= f.label :Quantity %><br />
    <%= f.text_field :Quantity %>
  </p>
  <p>
    <%= f.label :ItemPrice %><br />
    <%= f.text_field :ItemPrice %>
  </p>
  <p>
    <%= f.label :Taxs %><br />
    <%= f.text_field :Taxs %>
  </p>
  <p>
    <%= f.label :discount %><br />
    <%= f.text_field :discount %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', order_items_path %>